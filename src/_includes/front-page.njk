---
layout: index.njk
---

<header class="sprinkles__header sprinkles__header--hero">
  <div class="hero">
    <span class="h1">🧁</span>
    <h1>Sprinkles of JS</h1>
  </div>
  <label class="input">
    Search by keyword
    <input type="search">
  </label>
</header>
<main class="sprinkles__main">
  <h2>Featured Items</h2>
    <ul>
    {%- for post in collections.featured -%}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </li>
    {%- endfor -%}
  </ul>
  {{ content | safe }}
</main>
