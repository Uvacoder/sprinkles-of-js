---
title: ✨ Sprinkles of JS ✨
---
{%- set pageTitle %}{% if title %}{{ title }} | {% endif %}{{ meta.siteName }}{% endset -%}
{%- set pageDescription %}{% if description %}{{ description }}{% else %}{{ meta.siteDescription }}{% endif %}{% endset -%}
{%- set pageSocialImg %}{{ meta.url }}/previews/{% if title %}{{ title | slug }}{% else %}home{% endif %}.png{% endset -%}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle }}</title>
    <meta
      name="description"
      content="{{pageDescription}}"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,400;0,600;1,400;1,600&family=Lora:wght@500&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="/css/index.css">
    <meta name="twitter:card" content="summary_large_image" />
    {% if meta.twitterUsername %}
    <meta name="twitter:creator" content="@{{ meta.twitterUsername }}" />
    {% endif %}
    <meta
      name="twitter:title"
      content="{{pageTitle}}"
    />
    <meta
      name="twitter:description"
      content="{{pageDescription}}"
    />

    <meta
      name="og:title"
      content="{{pageTitle}}"
    />
    <meta
      name="og:description"
      content="{{pageDescription}}"
    />
    <meta property="og:image" content="{{pageSocialImg}}" />
    <meta name="twitter:image" content="{{pageSocialImg}}" />
  </head>
  <body>
    {% include '_sprinkles.njk' %}
    <div class="sprinkles">
    {{ content | safe }}
    <footer class="sprinkles__footer">
      {# {% include '_footer.njk' %} #}
    </footer>
  </body>
</html>